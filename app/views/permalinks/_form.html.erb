<%= simple_form_for(@permalink) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :slug %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :destination %>
    <%= f.input :data %>
    <%= f.input :state %>
    <%= f.input :sync %>
    <%= f.input :sync_time %>
    <%= f.input :change_time %>
    <%= f.input :history %>
    <%= f.input :deleted_at %>
    <%= f.input :archived_on %>
    <%= f.input :active %>
    <%= f.input :locked_on %>
    <%= f.input :visible %>
    <%= f.input :audit_log %>
    <%= f.input :permalog %>
    <%= f.input :draft %>
    <%= f.input :drafting %>
    <%= f.input :priority %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
