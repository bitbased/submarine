<%= simple_form_for(@submarine_account) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :subdomain %>
    <hr>
    <%= f.input :harvest_subdomain %>
    <%= f.input :harvest_email %>
    <%= f.input :harvest_password %>
    <hr>
    <%= f.input :aws_access_key_id, :as => :string %>
    <%= f.input :aws_secret_access_key, :as => :string %>
    <%= f.input :aws_s3_bucket, :as => :string %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "button radius" %>
  </div>
<% end %>
