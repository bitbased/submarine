<%= simple_form_for(@task) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :parent %>
    <%= f.association :project %>
    <%= f.input :tags %>
    <%= f.association :client %>
    <%= f.association :contact %>
    <%= f.input :name %>
    <%= f.input :status %>
    <%= f.input :focus %>
    <%= f.input :progress %>
    <%= f.input :notes %>
    <%= f.input :open_date %>
    <%= f.input :start_date %>
    <%= f.input :due_date %>
    <%= f.input :close_date %>
    <%= f.input :data %>
    <%= f.input :state %>
    <%= f.input :sync %>
    <%= f.input :sync_time %>
    <%= f.input :change_time %>
    <%= f.input :history %>
    <%= f.input :deleted_at %>
    <%= f.input :archived_on %>
    <%= f.input :active %>
    <%= f.input :locked_on %>
    <%= f.input :visible %>
    <%= f.input :audit_log %>
    <%= f.input :permalog %>
    <%= f.input :priority %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
